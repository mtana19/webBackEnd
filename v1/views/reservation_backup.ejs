<%- include("partials/header") %>

	<!-- Page Top section -->
	<section class="page-top-section-2 set-bg" data-setbg="img/page-top-bg.jpg">
		<div class="container">
			<h2>Reservation</h2>
			<div class="site-breadcrumb">
				<a href="/">Home</a> / <span>Reservation</span>
			</div>
		</div>
	</section>
	<!-- Page Top section end -->

	<!-- About section -->
	<section class="about-section spad">
		<div class="container">
			<div class="row">
				<div class="col-lg-4 details-body">

					<h3>Movie Reservation</h3>
					<form class="contact-form"  style="padding-top: 30px;">
						<div class="row">
							
							<div class="col-md-12">
								<div class="input-group mb-3">
								  <select class="custom-select" id="movieSelect">
								  </select>
								</div>
							</div>


							<div class="col-md-12" style="padding-bottom: 15px;">
								<select class="custom-select" id="dateSelect">
									<option selected>Choose a date...</option>
									<% schedules.date.forEach(function(schedule){ %>
										<option value= "<%= schedule.date %>" >
											<%= schedule.date[movie._id] %>
										</option>
									<% }); %>
								</select>
							</div>

							
							<option selected>Choose a showing...</option>
							<option value=movieslist[movieSelectId].timeslot>
							movieslist[movieSelectId].timeslot
							</option>;

							<option selected>Choose a cinema...</option>

							for(i = 0; i < movieslist[movieSelectId].cinema.length; i++){
								<option value=movieslist[movieSelectId].cinema[i]> Cinema
								movieslist[movieSelectId].cinema[i]
								</option>;
							}

							<div class="col-md-12">
								<div class="input-group mb-3">
								  <select class="custom-select" id="showingSelect">
								    <option selected>Choose a showing...</option>
								  </select>
								</div>
							</div>


							<div class="col-md-12">
								<div class="input-group mb-3">
								  <select class="custom-select" id="cinemaSelect">
								    <option selected>Choose a cinema...</option>
								  </select>
								</div>
							</div>

							<div class="col-md-12">
								<br>
								<a id="selectSeats" class="reserve-seats-btn" href="/reservation/seats">Select seats</a>
							</div>
						</div>
					</form>
				</div>


				<div class="col-lg-8"  style="padding-top: 20px; padding-left: 15px;">
					<h3 style="padding-top: 30px; padding-bottom: 20px;">Current Reservations</h3>
					<div class="row">
						<div class="container table-responsive table-r" style="display: table;">

						<table class="table table-hover">
							  <thead>
							    <tr>
							      <th class ="row-ID" scope="col">#</th>
							      <th class ="row-movie" scope="col">Movie</th>
							      <th class ="row-others" scope="col">Date</th>
							      <th class ="row-others" scope="col">Showing</th>
							      <th class ="row-others" scope="col">Cinema #</th>
							      <th class ="row-others text-center" scope="col">Action</th>
							    </tr>
							  </thead>
							  <tbody id = "reservations">
							  </tbody>
						  
						</table>
						</div>	
					</div>
				</div>
			</div>

			<div class="row">

			<div>


		</div>
	</section>
	<!-- About section end -->

<%- include("partials/footer") %>