<%- include("partials/header") %>

	<!-- Page Top section -->
	<section class="page-top-section-2 set-bg" data-setbg="img/page-top-bg.jpg">
		<div class="container">
			<h2>Reservation</h2>
			<div class="site-breadcrumb">
				<a href="/">Home</a> / <span>Reservation</span>
			</div>
		</div>
	</section>
	<!-- Page Top section end -->

	<!-- About section -->
	<section class="about-section spad">
		<div class="container">
			<div class="row">
				


				<div class="col-lg-8"  style="padding-top: 20px; padding-left: 15px;">
					<h3 style="padding-top: 30px; padding-bottom: 20px;">Current Reservations</h3>
					<div class="row">
						<div class="container table-responsive table-r" style="display: table;">

							<table class="table table-hover">
								<thead>
									<tr>
									<th class ="row-ID" scope="col">#</th>
									<th class ="row-movie" scope="col">Movie</th>
									<th class ="row-others" scope="col">Date</th>
									<th class ="row-others" scope="col">Showing</th>
									<th class ="row-others" scope="col">Cinema #</th>
									<th class ="row-others" scope="col">Seats</th>
									<th class ="row-others" scope="col">Price</th>
									<th class ="row-others text-center" scope="col">Action</th>
									</tr>
								</thead>
								<tbody>
									<% reserve.forEach(function(reservation, i){ %>
										<tr>
											<td><%= i+1 %></td>
											<td><%= reservation.movie %></td>
											<td><%- reservation.date %></td>
											<td><%- reservation.time %></td>
											<td><%= reservation.cinema %></td>
											<td><%= reservation.seats %></td>
											<td><%= reservation.total %></td>
											<td>
											<form action="/delete/<%= reservation._id %>?_method=delete" method="POST">
												<button type="submit" class="btn btn-primary">Delete</button>
											</form>
											</td>
										</tr>
									<% }); %>
								</tbody>
							
							</table>
						</div>	
					</div>
				</div>
			</div>

			<div class="row">

			<div>


		</div>
	</section>
	<!-- About section end -->

<%- include("partials/footer") %>